{{!-- <!DOCTYPE html> --}}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant</title>
    <style>
        body{
            background-color: #596275;
        }
        .box{
            display: block;
            margin: auto;
            width:100vw;
            height: 100vh;
            border: 3px solid red;
        }
    </style>
</head>
<body>
    {{#each rest}}
        <h2 style="text-align: center;">Welcome to {{name}}</h2>

        <form style="padding: 20px; border:3px solid red;" action="/menu"` method="GET">
            <p style="display: none;">{{this._id}}</p>
            <p>{{this.name}}</p>
            <input type="text" name="id" value={{this._id}} style="display: none;">
            <input type="submit" value="Visit restaurant">
        </form>
    {{/each}}
</body>
</html>